## Simple number guessing game

import rand;
import stdin;

const num = rand.int(1, 10);

for guesses_left in [ 3..1 ] {
	print("Your guess: ");
	let guess = stdin.read_int();
	if (guess == num) {
		println("You guessed the number! Good job!");
		break;
	} else {
		printlnf("Nope! You have %d guesses left", guesses_left);
	}
}

println("Game over!");